<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainMenuActivity"
    tools:visibility="visible">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gameGrid"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <ImageButton
        android:id="@+id/buttonRepeat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="75dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desRepeat"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/repeat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameGrid" />

    <ImageButton
        android:id="@+id/buttonConfirm"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="75dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desConfirm"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameGrid" />

    <TextView
        android:id="@+id/pobjednik"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/zuta"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonRepeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>